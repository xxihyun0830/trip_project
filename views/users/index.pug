extends ../layout

block content
  .container

    h1.main-title Users
    table.table.table-hover
    thead
      tr
        th Name
        th Email
        th Created At
        th type
        th
    tbody
      each user in users
        tr
          td
            a(href=`/users/${user._id}`)= user.name
          td= user.email
          td= moment(user.createdAt).format('YYYY-MM-DD HH:mm:ss')
          td= user.type
          td
            a.btn.btn-sm.btn-outline-secondary(href=`/users/${user._id}/edit`) 
              | #[i.fa.fa-pencil] Edit
            
  if ${user._id}.type == 'admin'
    a.btn.btn-primary(href='/users/new') #[i.fa.fa-plus] 새로운 사용자 등록하기 